{
  "compilerOptions": {
    "rootDirs": ["src", "tests"],
    "outDir": "dist",
    "target": "es2016",                                  
    "module": "commonjs",                                
    "esModuleInterop": true,                            
    "strict": true,                                      
    "skipLibCheck": true,
    "moduleResolution": "node",
    "baseUrl": "src",
    "paths": {
      "@/src/*": ["*"],
      "@/tests/*": ["../tests/*"],
    },
  }
}
